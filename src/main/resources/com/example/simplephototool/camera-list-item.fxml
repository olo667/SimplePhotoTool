<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.CheckBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Priority?>

<?import javafx.scene.control.RadioButton?>
<HBox fx:id="rootPane" alignment="CENTER_LEFT" spacing="10.0"
      xmlns="http://javafx.com/javafx/17"
      xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="com.example.simplephototool.CameraListItemController">
    <padding>
        <Insets bottom="5.0" left="10.0" right="10.0" top="5.0"/>
    </padding>
    
    <!-- Preview selector -->
    <RadioButton fx:id="previewRadio" mnemonicParsing="false"/>
    <!-- Active/Inactive toggle -->
    <CheckBox fx:id="activeCheckBox" mnemonicParsing="false" onAction="#onActiveToggle"/>
    
    <!-- Camera name label -->
    <Label fx:id="cameraNameLabel" text="Camera Name" HBox.hgrow="ALWAYS" maxWidth="Infinity"/>
    
    <!-- Delete button -->
    <Button fx:id="deleteButton" mnemonicParsing="false" onAction="#onDelete" 
            text="âœ•" styleClass="delete-button"
            prefWidth="25.0" prefHeight="25.0"/>
</HBox>
