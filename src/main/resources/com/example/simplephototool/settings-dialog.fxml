<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<VBox xmlns="http://javafx.com/javafx"
      xmlns:fx="http://javafx.com/fxml"
      fx:controller="com.example.simplephototool.SettingsDialogController"
      spacing="15" prefWidth="500" prefHeight="200"
      styleClass="settings-dialog">

    <padding>
        <Insets top="20" right="20" bottom="20" left="20"/>
    </padding>

    <!-- Output Directory Section -->
    <VBox spacing="5">
        <Label text="Snapshot Output Directory:" styleClass="label-header"/>
        <HBox spacing="10" alignment="CENTER_LEFT">
            <TextField fx:id="outputDirectoryField" HBox.hgrow="ALWAYS" editable="false"/>
            <Button text="Browse..." onAction="#handleBrowse" styleClass="button"/>
        </HBox>
    </VBox>

    <!-- Buttons -->
    <HBox spacing="10" alignment="CENTER_RIGHT">
        <Button text="Save" onAction="#handleSave" styleClass="button-primary" defaultButton="true"/>
        <Button text="Cancel" onAction="#handleCancel" styleClass="button" cancelButton="true"/>
    </HBox>

</VBox>
